<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/default_margin_cardview"
        android:layout_marginTop="@dimen/default_margin_cardview"
        android:layout_marginRight="@dimen/default_margin_cardview"
        android:layout_marginBottom="@dimen/default_margin_cardview"
        card_view:cardCornerRadius = "@dimen/cardview_corner_radius"
        card_view:cardBackgroundColor = "@color/CardViewColor"
        card_view:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp"
            android:clickable="true"
            android:onClick="CloseVolumeFragment"
            card_view:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="60dp"

            android:orientation="vertical">


            <TextView
                android:layout_width="358dp"
                android:layout_height="78dp"
                android:layout_marginLeft="160dp"
                android:text="Current Temprature"
                android:textAllCaps="true"
                android:textColor="@color/CardViewTextColor"
                android:textSize="30dp"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="417dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/temp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                card_view:srcCompat="@drawable/temp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="160dp"
                android:text="23 c"
                android:textAllCaps="true"
                android:textColor="@color/CardViewTextColor"
                android:textSize="70dp"
                android:textStyle="italic" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="307dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/Set4"
            android:layout_width="307dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:text="Set Temprature"
                android:textAllCaps="true"
                android:textColor="@color/CardViewTextColor"
                android:textSize="30dp"
                android:textStyle="italic" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/Set3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="550dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="0dp"
                android:text="23 c"
                android:textAllCaps="true"
                android:textColor="@color/CardViewTextColor"
                android:textSize="90dp"
                android:textStyle="italic" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/Set2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="500dp">


            <ImageView
                android:id="@+id/arc"
                android:layout_width="372dp"
                android:layout_height="293dp"
                android:layout_marginRight="0dp"
                card_view:srcCompat="@drawable/arc" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SetText"
            android:layout_width="360dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="420dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ZoneSelectText"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/CardViewTextColor"
                android:text="Please click on specific zone to change value in it"
                android:textSize="25dp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Set1"
            android:layout_width="360dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="420dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/plus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="0dp"
                card_view:srcCompat="@drawable/plus" />

            <ImageView
                android:id="@+id/minus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="180dp"
                card_view:srcCompat="@drawable/minus" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>